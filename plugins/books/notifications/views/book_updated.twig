<div class="notification-menu__text notification-menu__content-wrapper">
    {% if book.author %}
        <a href="{{ 'author_page' | page({profile_id: book.author.profile.id}) }}" class="ui-link _violet">{{ book.author.profile.username }}</a> обновил(а) книгу "<a href="{{ 'book-card' | page({book_id: book.id}) }}" class="ui-link _violet">{{ book.title }}</a>" + {{ symbols_count }} знаков
    {% elseif author %}
        {# обратная совместимость для старых уведомлений #}
        <a href="{{ 'author_page' | page({profile_id: author.profile.id}) }}" class="ui-link _violet">{{ author.profile.username }}</a> обновил(а) книгу "<a href="{{ 'book-card' | page({book_id: book.id}) }}" class="ui-link _violet">{{ book.title }}</a>" + {{ symbols_count }} знаков
    {% endif %}
</div>
